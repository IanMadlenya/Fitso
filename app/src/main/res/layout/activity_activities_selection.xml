<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_activities_selection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fitso.fitso.ActivitiesSelectionActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/greetingsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(Greetings)"
                android:gravity="center"
                android:textSize="30sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/bodyweightTile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:alpha="0.5"
                        android:scaleType="centerCrop"
                        android:onClick="activitySelected"
                        android:src="@drawable/bodyweight_tile"/>

                    <ImageView
                        android:alpha="0.5"
                        android:id="@+id/crossfitTile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:onClick="activitySelected"
                        android:src="@drawable/crossfit_tile"/>

                    <ImageView
                        android:alpha="0.5"
                        android:id="@+id/swimmingTile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:onClick="activitySelected"
                        android:src="@drawable/swim_tile"/>

                    <ImageView
                        android:alpha="0.5"
                        android:id="@+id/basketballTile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:onClick="activitySelected"
                        android:src="@drawable/basketball_tile"/>

                    <ImageView
                        android:alpha="0.5"
                        android:id="@+id/ultimateTile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:onClick="activitySelected"
                        android:src="@drawable/frisbee_tile"/>

                </LinearLayout>

                <LinearLayout
                    android:alpha="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:alpha="0.5"
                        android:id="@+id/weightLiftingTile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:onClick="activitySelected"
                        android:src="@drawable/weights_tile"/>

                    <ImageView
                        android:alpha="0.5"
                        android:id="@+id/runningTile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:onClick="activitySelected"
                        android:src="@drawable/run_tile"/>

                    <ImageView
                        android:alpha="0.5"
                        android:id="@+id/bikingTile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:onClick="activitySelected"
                        android:src="@drawable/bike_tile"/>

                    <ImageView
                        android:alpha="0.5"
                        android:id="@+id/soccerTile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:onClick="activitySelected"
                        android:src="@drawable/soccer_tile"/>

                    <ImageView
                        android:alpha="0.5"
                        android:id="@+id/volleyballTile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:onClick="activitySelected"
                        android:src="@drawable/volleyball_tile"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <Button
        android:onClick="activitiesSelectionConfirmButtonClicked"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Confirm"
        android:layout_weight="10"/>

</LinearLayout>
